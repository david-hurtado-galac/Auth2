<Window x:Class="Auth2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auth2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="350">
            <Button x:Name="BtnLogin" Content="Iniciar sesión / Cambiar cuenta" Height="35" Margin="0,0,0,10" Click="BtnLogin_Click"/>
            <TextBlock Text="Correo electrónico destinatario:"/>
            <TextBox x:Name="TxtTo" Height="25"/>
            <TextBlock Text="Asunto:"/>
            <TextBox x:Name="TxtSubject" Height="25"/>
            <TextBlock Text="Mensaje:"/>
            <TextBox x:Name="TxtBody" Height="60" AcceptsReturn="True"/>
            <Button x:Name="BtnSend" Content="Enviar correo" Height="35" Margin="0,10,0,0" Click="BtnSend_Click"/>
            <Separator Margin="0,10,0,10"/>
            <Button x:Name="BtnUpload" Content="Subir archivo a OneDrive" Height="35" Click="BtnUpload_Click"/>
            <TextBlock x:Name="LblStatus" Margin="0,10,0,0" Foreground="DarkGreen"/>
        </StackPanel>
    </Grid>
</Window>
